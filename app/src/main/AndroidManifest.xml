<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fontmessaging.fontfun.app" >

    <uses-sdk android:minSdkVersion="14"
              android:targetSdkVersion="19"
              android:maxSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_test"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat">
        <activity
            android:name="com.fontmessaging.fontfun.app.MainActivity"
            android:label="@string/title_activity_main"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.fontmessaging.fontfun.app.DrawingActivity"
            android:label="@string/title_activity_drawing"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.fontmessaging.fontfun.app.DocumentActivity"
            android:label="@string/title_activity_document"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
        </activity>
    </application>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>
